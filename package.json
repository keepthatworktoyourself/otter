{
  "name": "otter-editor",
  "description": "Content editor with declaratively defined content blocks.",
  "version": "1.0.12",
  "author": "Ben Hallstein <ben@ben.am> (https://ben.am/)",
  "license": "SEE LICENSE IN LICENSE.md",
  "homepage": "https://github.com/keepthatworktoyourself/otter",
  "repository": {
    "type": "git",
    "url": "https://github.com/keepthatworktoyourself/otter.git"
  },
  "files": [
    "README.md",
    "LICENSE.md",
    "dist"
  ],
  "main": "dist/index.js",
  "scripts": {
    "demo": "parcel demo/index.html -p 3002",
    "clean": "rm -rf dist demo/dist .parcel-cache",
    "build": "parcel build --no-source-maps demo/index.html --target default",
    "t": "ava -c 1 --verbose src/test/*",
    "tw": "ava -c 1 --watch src/test/*",
    "ts": "ava -c 1 --watch",
    "test": "npm run t",
    "lint": "eslint --fix .",
    "lint-check": "eslint .",
    "i": "npm run clean && rm -rf node_modules && npm install"
  },
  "devDependencies": {
    "@babel/cli": "^7.16.8",
    "@babel/core": "^7.16.12",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-react": "^7.16.7",
    "@babel/register": "^7.16.9",
    "autoprefixer": "^10.4.2",
    "ava": "^4.0.1",
    "browser-env": "^3.3.0",
    "buffer": "^6.0.3",
    "cssnano": "^5.0.16",
    "eslint": "^8.7.0",
    "eslint-config-react-app": "^7.0.0",
    "eslint-plugin-react": "^7.28.0",
    "esm": "^3.2.25",
    "parcel": "^2.2.1",
    "postcss": "^8.4.5",
    "postcss-import": "^14.0.2",
    "sinon": "^12.0.1",
    "tailwindcss": "^3.0.17"
  },
  "dependencies": {
    "framer-motion": "^6.2.3",
    "react": "^16.14.0",
    "react-beautiful-dnd": "^13.1.0",
    "react-dom": "^16.14.0",
    "react-quill": "^1.3.5",
    "simple-react-heroicons": "^1.3.12"
  },
  "ava": {
    "require": [
      "esm"
    ]
  },
  "targets": {
    "default": {}
  }
}
