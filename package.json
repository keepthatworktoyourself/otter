{
  "name": "otter-editor",
  "description": "Content editor with declaratively defined content blocks.",
  "version": "0.0.163",
  "author": "Ben Hallstein <ben@ben.am> (https://ben.am/)",
  "license": "SEE LICENSE IN LICENSE.md",
  "homepage": "https://github.com/keepthatworktoyourself/otter",
  "repository": {
    "type": "git",
    "url": "https://github.com/keepthatworktoyourself/otter.git"
  },
  "files": [
    "README.md",
    "LICENSE.md",
    "dist"
  ],
  "main": "dist/index.js",
  "scripts": {
    "lint": "eslint --fix .",
    "lint-check": "eslint .",
    "demo": "parcel demo/index.html -p 3001",
    "clean": "rm -rf dist demo/dist .parcel-cache",
    "build": "npm run clean && parcel build --no-source-maps demo/index.html --target default",
    "babel": "babel src/index.js -d dist --presets=@babel/preset-env,@babel/preset-react && babel src/core -d dist/core --presets=@babel/preset-env,@babel/preset-react",
    "dev--plugin": "babel -w src/index.js -d otter-plugin/dev/deps/otter-editor & babel -w src/core -d otter-plugin/dev/deps/otter-editor/core",
    "t": "ava -c 1 --verbose src/test/*",
    "tw": "ava -c 1 --watch src/test/*",
    "ts": "ava -c 1 --watch",
    "test": "npm run t",
    "i": "npm run clean && rm -rf node_modules && npm install"
  },
  "devDependencies": {
    "@babel/cli": "^7.15.7",
    "@babel/core": "^7.15.8",
    "@babel/preset-env": "^7.15.8",
    "@babel/preset-react": "^7.14.5",
    "@babel/register": "^7.15.3",
    "autoprefixer": "^10.3.7",
    "ava": "^3.15.0",
    "browser-env": "^3.3.0",
    "cssnano": "^5.0.8",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.6",
    "eslint": "^7.32.0",
    "eslint-config-react-app": "^6.0.0",
    "eslint-plugin-react": "^7.26.1",
    "esm": "^3.2.25",
    "parcel": "^2.0.0",
    "postcss": "^8.3.9",
    "postcss-import": "^14.0.2",
    "sinon": "^11.1.2",
    "tailwindcss": "^2.2.17"
  },
  "dependencies": {
    "framer-motion": "^5.3.1",
    "react": "^17.0.2",
    "react-beautiful-dnd": "^13.1.0",
    "react-dom": "^17.0.2",
    "react-quill": "^1.3.5",
    "react-toggle": "^4.1.2",
    "simple-react-heroicons": "1.3.12"
  },
  "peerDependencies": {
    "react": "*",
    "react-dom": "*"
  },
  "ava": {
    "require": [
      "esm"
    ]
  },
  "targets": {
    "default": {}
  }
}
